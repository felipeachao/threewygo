# Ignore bundler config.
/.bundle
/vendor/bundle

# Ignore the SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore coverage reports generated by SimpleCov.
/coverage/

# Ignore master key for decrypting credentials and more.
/config/master.key

# Ignore files generated by Capybara for tests.
capybara-*.html

# Ignore asset files.
/public/assets
/public/packs
/node_modules
/yarn-error.log

# Ignore credentials
/config/credentials.yml.enc

# Ignore environment variable files.
/.env
.env.*
